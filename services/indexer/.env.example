PORT=8787
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres
DATABASE_SSL=false

SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PROGRAM_ID=REPLACE_WITH_PROGRAM_ID
SYNC_INTERVAL_MS=15000
SYNC_COMMITMENT=confirmed

# Phase A metadata decrypt key (must match frontend if encrypted metadata is used)
METADATA_ENCRYPTION_KEY=change-me

# Phase B policy encryption key (falls back to METADATA_ENCRYPTION_KEY if empty)
POLICY_ENCRYPTION_KEY=change-me

# Admin key for policy/grant endpoints (x-admin-key header)
ADMIN_API_KEY=change-me

# Phase C - real Arcium SDK integration
ARCIUM_ENABLED=true
ARCIUM_REQUIRE_CLUSTER=false
ARCIUM_CLUSTER_OFFSET=0
ARCIUM_RPC_URL=https://api.devnet.solana.com
ARCIUM_STATUS_CACHE_MS=30000
